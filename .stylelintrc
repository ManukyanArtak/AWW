{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "screen",
          "extends",
          "tailwind",
          "utilities",
          "components",
          "layer"
        ]
      }
    ],
    "selector-class-pattern": "(^[a-z][a-zA-Z0-9]+$)|(^([a-z][a-z0-9]*)(-[a-z0-9]+)*$)|(^([a-z][a-z0-9]*)(_[a-z0-9]+)*$)",
    "no-descending-specificity": null
  }
}
